[Unit]
Description=uWSGI Emperor service
After=syslog.target

[Service]
User=www-data
Group=www-data
ExecStart=/usr/local/bin/uwsgi --emperor /opt/OpenBadge-Server/deploy/vassals/
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
